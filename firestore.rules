/**
 * @fileoverview Firestore Security Rules for SecureLogin application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles
 * and uses a dedicated collection to manage admin roles.
 *
 * Data Structure:
 * - /users/{userId}: Stores individual user profiles, accessible only to the user themselves.
 * - /users/{userId}/user_notifications/{notificationId}: Stores per-user notification status.
 * - /roles_admin/{userId}: Stores admin role assignments; the existence of a document
 *   indicates admin privileges.
 * - /notifications/{notificationId}: Stores global notifications sent by admins.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles under /users/{userId}.
     * @path /users/{userId}
     * @allow (create) - Any user can create a profile.
     * @allow (list) - Admin can list all users.
     * @allow (get, update) - Only the owner can get and update their own profile.
     * @deny (delete) - No one can delete profiles.
     */
    match /users/{userId} {
      allow get, update: if isOwner(userId);
      allow list: if isAdmin();
      allow create: if true;
      allow delete: if false;

      /**
       * @description Manages per-user notification data.
       * @path /users/{userId}/user_notifications/{notificationId}
       * @allow (get, list, update) - Owner can read and update their own notifications.
       * @allow (create) - Admins can create (fan-out) notifications for users.
       */
      match /user_notifications/{notificationId} {
        allow get, list: if isOwner(userId);
        allow create: if isAdmin();
        allow update: if isOwner(userId) && request.resource.data.read == true;
        allow delete: if false;
      }
    }

    /**
     * @description Manages admin roles using documents under /roles_admin/{userId}. The presence of a document signifies admin status.
     * @path /roles_admin/{userId}
     * @allow (create) - Admin account 'admin@noukha.com' can create their admin role document.
     *   - request.auth.uid: [The UID associated with admin@noukha.com]
     * @allow (get) - Any authenticated user can check if they have admin privileges by reading their role document.
     *   - request.auth.uid: 'some_user'
     * @deny (create) - A non-admin user cannot create their own admin role document.
     *   - request.auth.uid: 'normal_user'
     * @principle Restricts admin role creation to authorized personnel.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if false;
      allow delete: if isAdmin();
    }

    /**
     * @description Manages global notifications.
     * @path /notifications/{notificationId}
     * @allow (list, get) - Any signed-in user can read notifications.
     * @allow (create) - Only admins can create new notifications.
     * @deny (update, delete) - Nobody can change a global notification after creation.
     */
    match /notifications/{notificationId} {
      allow list, get: if isSignedIn();
      allow create: if isAdmin();
      allow update, delete: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
      return request.auth.token.email == 'admin@noukha.com';
    }
  }
}
