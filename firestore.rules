
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user profiles under /users/{userId}.
     * @path /users/{userId}
     * @allow (create) - Any user can create a profile.
     * @allow (list) - Admin can list all users.
     * @allow (get, update) - The owner or an admin can get and update a user's profile.
     * @allow (delete) - The owner can delete their own profile.
     */
    match /users/{userId} {
      allow get, update: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if true;
      allow delete: if isOwner(userId);

      /**
       * @description Manages per-user notification data.
       * @path /users/{userId}/user_notifications/{notificationId}
       * @allow (get, list, update) - Owner can read, create and update their own notifications. Admins can create notifications for users.
       */
      match /user_notifications/{notificationId} {
        allow get, list, update: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId) || isAdmin();
        allow delete: if false;
      }
      
      /**
       * @description Manages user's generated images.
       * @path /users/{userId}/generated_images/{imageId}
       * @allow (get, list, create, update, delete) - Owner can manage their images. Admin can read them.
       */
      match /generated_images/{imageId} {
        allow create, update, delete: if isOwner(userId);
        allow get, list: if isOwner(userId) || isAdmin();
      }

      /**
       * @description Manages user's generated videos.
       * @path /users/{userId}/generated_videos/{videoId}
       * @allow (create) - Owner can create their videos.
       * @allow (get, list) - Owner or admin can read them.
       */
      match /generated_videos/{videoId} {
        allow create: if isOwner(userId);
        allow get, list: if isOwner(userId) || isAdmin();
        allow update, delete: if false;
      }

      /**
       * @description Manages user's generated avatars.
       * @path /users/{userId}/generated_avatars/{avatarId}
       * @allow (read, write) - Owner or admin can manage their avatars.
       */
      match /generated_avatars/{avatarId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }

      /**
       * @description Manages user's purchase history.
       * @path /users/{userId}/purchase_history/{purchaseId}
       * @allow (list, get) - The owner or an admin can read purchase history records.
       * @allow (create) - A signed-in user can create their own purchase records.
       */
      match /purchase_history/{purchaseId} {
        allow list, get: if isOwner(userId) || isAdmin();
        allow create: if isSignedIn() && isOwner(userId);
        allow update, delete: if false;
      }
    }

    /**
     * @description Manages admin roles using documents under /roles_admin/{userId}. The presence of a document signifies admin status.
     * @path /roles_admin/{userId}
     * @allow (create) - Admin account 'admin@noukha.com' can create their admin role document.
     *   - request.auth.uid: [The UID associated with admin@noukha.com]
     * @allow (get) - Any authenticated user can check if they have admin privileges by reading their role document.
     *   - request.auth.uid: 'some_user'
     * @deny (create) - A non-admin user cannot create their own admin role document.
     *   - request.auth.uid: 'normal_user'
     * @principle Restricts admin role creation to authorized personnel.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if false;
      allow delete: if isAdmin();
    }

    /**
     * @description Manages global notifications.
     * @path /notifications/{notificationId}
     * @allow (list, get) - Any signed-in user can read notifications.
     * @allow (create) - Only admins can create new notifications.
     * @deny (update, delete) - Nobody can change a global notification after creation.
     */
    match /notifications/{notificationId} {
      allow list, get: if isSignedIn();
      allow create: if isAdmin();
      allow update, delete: if false;
    }

    /**
     * @description Manages notifications for admins (e.g. credit purchases).
     * @path /admin_notifications/{notificationId}
     * @allow (list) - Only admins can list all admin notifications.
     * @allow (get, update, delete) - Only admins can manage individual notifications.
     * @allow (create) - Any signed-in user can create a notification for admins.
     */
    match /admin_notifications/{notificationId} {
        allow list: if isAdmin();
        allow get, update, delete: if isAdmin();
        allow create: if isSignedIn();
    }
    
    /**
     * @description Public images for the feed.
     * @path /public_images/{imageId}
     * @allow (list, get) - Any user can see public images.
     * @allow (create) - Signed in users can post public images.
     */
    match /public_images/{imageId} {
      allow list, get: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if false;
    }

    /**
     * @description Manages support tickets submitted by users.
     * @path /support_tickets/{ticketId}
     * @allow (create) - Any signed-in user can create a support ticket for themselves.
     * @allow (get, list, update) - Admins can manage all tickets.
     */
    match /support_tickets/{ticketId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow get, list, update: if isAdmin();
      allow delete: if false;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.email == 'admin@noukha.com';
    }
  }
}
