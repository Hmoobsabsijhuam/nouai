
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write their own profile pictures.
    // The path is restricted to a folder named 'profile-pictures'
    // and a file named after their own user ID.
    match /profile-pictures/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own generated images.
    match /generated-images/{userId}/{imageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own generated videos.
    match /generated-videos/{userId}/{videoId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
